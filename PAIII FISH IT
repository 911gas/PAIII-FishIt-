-- Update Speed Buttons (highlight selected)
function UpdateSpeedButtons()
    for i, btn in ipairs(SpeedButtons) do
        if i == Config.Speed then
            btn.BackgroundColor3 = Color3.fromRGB(255, 255, 100) -- Kuning ketika selected
        else
            btn.BackgroundColor3 = SpeedLevels[i].Color
        end
    end
end

-- Real Fish Detection
function GetRealFishCount()
    local count = 0
    local backpack = player:FindFirstChild("Backpack")
    if backpack then
        for _, item in pairs(backpack:GetChildren()) do
            if item:IsA("Tool") and item.Name:lower():find("fish") then
                count = count + 1
            end
        end
    end
    return count
end

-- Fishing Function dengan ULTRA SPEED BENERAN
function FishingAction()
    local speed = SpeedLevels[Config.Speed]
    local method = Methods[Config.Method]
    
    -- Cast
    if method.Key == "Mouse" then
        VIM:SendMouseButtonEvent(0, 0, 0, true, game, 0)
        wait(0.05)
        VIM:SendMouseButtonEvent(0, 0, 0, false, game, 0)
    else
        VIM:SendKeyEvent(true, method.Key, false, game)
        wait(0.05)
        VIM:SendKeyEvent(false, method.Key, false, game)
    end
    
    -- Wait for bite - TIMING BENERAN CEPAT!
    wait(speed.Delay)
    
    -- Reel
    if method.Key == "Mouse" then
        VIM:SendMouseButtonEvent(0, 0, 0, true, game, 0)
        wait(0.05)
        VIM:SendMouseButtonEvent(0, 0, 0, false, game, 0)
    else
        VIM:SendKeyEvent(true, method.Key, false, game)
        wait(0.05)
        VIM:SendKeyEvent(false, method.Key, false, game)
    end
    
    -- Update counters
    Config.FishCount = Config.FishCount + 1
    
    -- Check real catch - BUKAN VISUAL DOANG!
    local realCount = GetRealFishCount()
    if realCount > Config.RealFish then
        Config.RealFish = realCount
    end
    
    -- Update display
    StatsLabel.Text = "Fish: " .. Config.FishCount .. " | Real: " .. Config.RealFish
end

-- Main Loop
function FishingLoop()
    while Config.Enabled do
        FishingAction()
        wait(SpeedLevels[Config.Speed].Delay * 0.5) -- Cooldown juga cepat!
    end
end

-- Button Events
StartBtn.MouseButton1Click:Connect(function()
    if not Config.Enabled then
        Config.Enabled = true
        Config.LastInventory = GetRealFishCount()
        StatusLabel.Text = "Status: Fishing..."
        StatusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
        StartBtn.BackgroundColor3 = Color3.fromRGB(30, 120, 50)
        spawn(FishingLoop)
        
        print("âš¡ SansMoba FishIt Activated!")
        print("ðŸŽ¯ Speed: " .. SpeedLevels[Config.Speed].Name)
        print("ðŸŽ£ Real fish detection: ACTIVE")
    end
end)

StopBtn.MouseButton1Click:Connect(function()
    Config.Enabled = false
    StatusLabel.Text = "Status: Stopped"
    StatusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
    StartBtn.BackgroundColor3 = Color3.fromRGB(60, 180, 80)
end)

MethodBtn.MouseButton1Click:Connect(function()
    Config.Method = Config.Method + 1
    if Config.Method > #Methods then
        Config.Method = 1
    end
    MethodBtn.Text = "METHOD: " .. Methods[Config.Method].Text
end)

-- Hotkey support
UIS.InputBegan:Connect(function(input, processed)
    if processed then return end
    
    if input.KeyCode == Enum.KeyCode.F then
        Config.Enabled = not Config.Enabled
        if Config.Enabled then
            Config.LastInventory = GetRealFishCount()
            StatusLabel.Text = "Status: Fishing..."
            StatusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
            StartBtn.BackgroundColor3 = Color3.fromRGB(30, 120, 50)
            spawn(FishingLoop)
        else
            StatusLabel.Text = "Status: Stopped"
            StatusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
            StartBtn.BackgroundColor3 = Color3.fromRGB(60, 180, 80)
        end
    end
end)

-- Initialize
UpdateSpeedButtons()
Config.LastInventory = GetRealFishCount()
Config.RealFish = Config.LastInventory
StatsLabel.Text = "Fish: 0 | Real: " .. Config.RealFish

print("âœ… SansMoba FishIt Loaded!")
print("âš¡ Ultra Speed: REAL (Not Visual)")
print("ðŸŽ® Press F to start/stop")
print("ðŸŽ£ Real fish detection: ACTIVE")
