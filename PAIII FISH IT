-- Speed Buttons dengan warna khas SansMoba
local SpeedButtons = {}
for i = 1, 4 do
    local SpeedBtn = Instance.new("TextButton")
    SpeedBtn.Size = UDim2.new(0.22, 0, 0, 25)
    SpeedBtn.Position = UDim2.new(0.03 + (0.24 * (i-1)), 0, 0.4, 0)
    SpeedBtn.BackgroundColor3 = SpeedLevels[i].Color
    SpeedBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    SpeedBtn.Text = SpeedLevels[i].Name
