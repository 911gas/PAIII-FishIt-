    {Delay = 0.3, Name = "SLOW", Color = Color3.fromRGB(100, 200, 100)},
    {Delay = 0.15, Name = "NORMAL", Color = Color3.fromRGB(100, 150, 255)},
    {Delay = 0.06, Name = "FAST", Color = Color3.fromRGB(255, 200, 100)},
    {Delay = 0.02, Name = "ULTRA", Color = Color3.fromRGB(255, 50, 50)}
}

-- Methods mirip SansMoba
local Methods = {
    {Text = "E KEY", Key = "E"},
    {Text = "MOUSE", Key = "Mouse"},
    {Text = "F KEY", Key = "F"},
    {Text = "R KEY", Key = "R"}
}

